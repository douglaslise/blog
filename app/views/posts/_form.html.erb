<%= form_for(@post) do |f| %>

  <% if @post.errors.count > 0 %>
	  <p>
	    <%= @post.errors.count %> erros impediram este post de ser criado:
	  </p>
		<ul>
		 <% @post.errors.full_messages.each do |e|%>
		  <li><%= e %></li>
	   <% end %>
		</ul>
  <% end %>

	<div class="field">
		<%= f.label :titulo %>
		<%= f.text_field :titulo %>
	</div>

	<div class="field">
		<%= f.label :texto %>
		<%= f.text_area :texto %>
	</div>

	<%= f.submit %>

<% end %>
